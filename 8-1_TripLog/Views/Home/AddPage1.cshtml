@model _8_1_TripLog.Models.AddPage1ViewModel

@{
    ViewData["SubTitle"] = "Add Trip Destination and Dates";
}

<!-- Form for entering first page data -->
<form asp-action="AddPage1" method="post">
    <!-- Destination Data Input -->
    <div class="form-group">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>
    <!-- Start Date Data Input -->
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" value="@DateTime.Now.ToString("MM-dd-yyyy")"/>
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <!-- End Date Data Input -->
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" value="@DateTime.Now.ToString("MM-dd-yyyy")"/>
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <!-- Opetional -> Accommodation Data Input -->
    <div class="form-group">
        <label asp-for="Accommodation"></label>
        <input asp-for="Accommodation" class="form-control" />
        <span asp-validation-for="Accommodation" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
